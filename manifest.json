{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "YOUR_APP_ID_HERE",
  "packageName": "com.yourcompany.teamsllm",
  "developer": {
    "name": "Your Company",
    "websiteUrl": "https://yourcompany.com",
    "privacyUrl": "https://yourcompany.com/privacy",
    "termsOfUseUrl": "https://yourcompany.com/terms"
  },
  "name": {
    "short": "LLM Assistant",
    "full": "LLM Assistant for Teams"
  },
  "description": {
    "short": "AI-powered assistant accessible to all Teams users",
    "full": "Quick and easy LLM integration for Microsoft Teams. Connect and configure in minutes."
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "accentColor": "#0078D4",
  "bots": [
    {
      "botId": "YOUR_BOT_ID_HERE",
      "scopes": ["personal", "team", "groupchat"],
      "commandLists": [
        {
          "scopes": ["personal", "team", "groupchat"],
          "commands": [
            {
              "title": "ask",
              "description": "Ask the LLM a question"
            },
            {
              "title": "chat",
              "description": "Start a conversation with the LLM"
            }
          ]
        }
      ]
    }
  ],
  "composeExtensions": [
    {
      "botId": "YOUR_BOT_ID_HERE",
      "commands": [
        {
          "id": "askLLM",
          "type": "query",
          "title": "Ask LLM",
          "description": "Query the LLM assistant",
          "initialRun": false,
          "parameters": [
            {
              "name": "query",
              "title": "Your Question",
              "description": "Enter your question here",
              "inputType": "text"
            }
          ]
        }
      ]
    }
  ],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": []
}

